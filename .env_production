# 双康幼稚園用品申込サイト - CORE-MINI本番環境設定
# このファイルを .env にリネームして使用

# 環境設定
ENV=production
DEBUG=false

# データベース設定（CORE-MINI用）
DB_HOST=localhost
DB_NAME=nishidasj_iseyohin
DB_USERNAME=nishidasj_iseyohin
DB_PASSWORD=your_database_password_here
DB_CHARSET=utf8mb4

# メール設定（Gmail SMTP推奨）
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@iseyohin.geo.jp
MAIL_FROM_NAME=双康幼稚園用品申込システム

# 管理者メール
ADMIN_EMAIL=admin@iseyohin.geo.jp

# セキュリティ設定
APP_KEY=iseyohin2025_secure_key_for_production
CSRF_TOKEN_EXPIRE=3600

# アップロード設定
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif

# 申込設定
ORDER_ENABLED=true
ORDER_START_DATE=2025-01-01
ORDER_END_DATE=2025-03-31